<div class="user-form">
<%= form_with scope: :user, url: "/users", method: "post", local: true do |form| %>

<h1>Signup Form</h1>

<p>
    <%= form.label :email %><br>
    <%= form.text_field :email %>
  </p>

 <p>
    <%= form.label :username %><br>
    <%= form.text_field :username %>
  </p>

  <p>
    <%= form.label :password %><br>
    <%= form.password_field :password %>
  </p>

  <p>
    <%= form.submit %>
  </p>

<% end %>
</div>
