<div id="article-sidebar">

	<div id="article-photo">
		<p>photo goes here</p>
	</div>

	<p>article_sidebar</p>
	<p><strong>born:</strong> some info</p>
	<p><strong>died:</strong> some info</p>

</div>

<div id="article-container">
	<h1><%= @article.title %></h1>
	<p id="plug">From Snikipedia, the most awesome encyclopedia evaaaa</p>
	<hr>
	<p><%= @article.summary %></p>
	<p><%= @article.body %></p>
</div>


<!-- ADAM TESTING AREA FOR UPLOADING IMAGE FOR ARTICLES. -->

<div class="row">
	<% photos = @article.photos %>
	<% if photos %>
		<h3>Photos: <%= photos.count %></h3>

		<% photos.each do |photo| %>
			<div class="col-md-2">
				<%= render 'photos/photo_partial', photo: photo %>
			</div>
		<% end %>
	<% else %>
		<h3>No Photos Posted Yet</h3>
	<% end %>

	<!-- ONLY ADMIN AND ARTICLE AUTHOR CAN UPLOAD IMAGES -->
	<% if @user && (@user == photo.user || @user.role == 'admin') %>
	<%= render partial: 'photos/upload_image_modal', article: @article %>
	<% end %>


</div>
