<style>
  .square {
    display: inline-block;
    
    position: relative;
    width: 25%;
    padding-bottom : 25%; /* = width for a 1:1 aspect ratio */
    margin:1.66% auto;
    border: 1px solid #cccccc;
    overflow:hidden;
    border-radius: 3%;
}

.content {
    position:absolute;
    height:90%; /* = 100% - 2*5% padding */
    width:90%; /* = 100% - 2*5% padding */
    padding: 5%;
    
}
.table{
    display:table;
    width:100%;
    height:100%;
}
.table-cell{
    display: table-cell;
    vertical-align: middle;
}
</style>


<div class="container">
  
  <h1><%= @category.name %></h1> 
  <p><%= @category.description %></p>

<% @articles.each do |article| %>
<div class="square">
    <div class="content">
        <div class="table">
            <div class="table-cell">
                <div class="article-look">
                  <h2><%= article.title %></h2>
                  <p><%= article.summary %></p>
                </div> 
            </div>
        </div>
    </div>
</div>
<% end %>

</div>